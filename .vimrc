highlight LineNr ctermfg=LightBlue
syntax on
set number
set relativenumber
set mouse=a
filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab
set clipboard=unnamedplus
let mapleader = ","
let g:mapleader = ","

nnoremap x "_x
nnoremap d "_d
vnoremap d "_d

nnoremap <leader>d ""d
nnoremap <leader>D ""D
vnoremap <leader>d ""d
